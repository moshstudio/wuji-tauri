{
  "$schema": "https://schema.tauri.app/config/2.3.1",
  "productName": "无极",
  "mainBinaryName":"无极",
  "version": "0.1.6",
  "identifier": "com.wuji-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "无极",
        "width": 1100,
        "height": 700,
        "windowClassname": "wuji",
        "backgroundThrottling": "throttle"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": []
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "silent": true,
        "type": "embedBootstrapper"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4NDNCRDczRjBFOTMzMQpSV1F4a3c0LzF6dUVDaDRpTU9qeTNIay84eUtJRW44L3JGdlNvcm0xNFZyYWlJTWpMelpaZmJTMQo=",
      "endpoints": [
        "https://wuji.s3.bitiful.net/wuji%2Fupdater_win.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
